{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "type": "shell",
            "command": "pnpm watch",
            "isBackground": true,
            "problemMatcher": "$tsc-watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            }
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "pnpm run compile",
            "problemMatcher": "$tsc",
            "group": "build"
        },
        {
            "label": "lint",
            "type": "shell",
            "command": "pnpm run lint",
            "problemMatcher": "$eslint-stylish",
            "group": "build"
        }
    ]
}
